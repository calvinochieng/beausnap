# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this
DJANGO_DEBUG=False
PRODUCTION=True  # Set to True for production deployment
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
USE_SUPABASE=False  # Set to True for production with Supabase

# Supabase PostgreSQL (for production)
SUPABASE_HOST=your-project-ref.supabase.co
SUPABASE_DB_NAME=postgres
SUPABASE_USER=postgres
SUPABASE_PORT=5432
SUPABASE_PASSWORD=your-supabase-password

# Local PostgreSQL (alternative to SQLite for development)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Social Auth (Google OAuth)
GOOGLE_OAUTH2_KEY=your-google-oauth-key
GOOGLE_OAUTH2_SECRET=your-google-oauth-secret

# Payment Configuration (Paddle/Polar)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret
PAYMENT_ORGANIZATION_ID=your-org-id
ONE_TIME_PRODUCT_ID=your-one-time-product-id
YEARLY_PRODUCT_ID=your-yearly-product-id

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security (for production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True